<table id="team_dynamix_table" class="<%= table_css_classes %>">
  <thead>
    <tr>
      <th colspan="2"><%= _(td_tab_title) %></th>
    </tr>
  </thead>
  <tbody>
    <% if @error %>
      <tr>
        <td><%= @error %></td>
      </tr>
    <% end %>
    <% if @asset %>
      <tr>
        <td>URL</td>
        <td>
          <a href="<%= td_asset_uri %>" target="_blank"><%= @asset['Uri'] %></a>
        </td>
      </tr>
      <% teamdynamix_fields.each do |name, value| %>
        <tr>
          <td><%= name %></td>
          <td><%= value %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
